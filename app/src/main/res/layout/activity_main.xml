<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.francis.progressbar.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <org.francis.progressbar.view.HorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:padding="5dp"
            android:layout_marginTop="30dp"/>
        <org.francis.progressbar.view.HorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="60"
            android:padding="5dp"
            app:progress_text_color="#ff0000"
            app:progress_text_size="16sp"
            app:progress_reach_height="5dp"
            app:progress_reach_color="#1dd18c"
            app:progress_unreach_color="#848484"
            android:layout_marginTop="30dp"/>
        <org.francis.progressbar.view.HorizontalProgressBar
            android:id="@+id/id_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="20"
            android:padding="3dp"
            app:progress_text_color="#04c1d2"
            app:progress_text_size="16sp"
            app:progress_reach_height="3dp"
            app:progress_unreach_height="1dp"
            app:progress_reach_color="#1dd18c"
            app:progress_unreach_color="#848484"
            android:layout_marginTop="30dp"/>

        <org.francis.progressbar.view.RoundProgressBar
            android:id="@+id/id_progressbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="20"
            android:padding="3dp"
            app:radius="100dp"
            app:progress_text_color="#04c1d2"
            app:progress_text_size="16sp"
            app:progress_reach_height="3dp"
            app:progress_unreach_height="1dp"
            app:progress_reach_color="#1dd18c"
            app:progress_unreach_color="#848484"
            android:layout_marginTop="30dp"/>

    </LinearLayout>
</ScrollView>
